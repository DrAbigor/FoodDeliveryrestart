@page "/groupordermembers/delete"
@using Microsoft.EntityFrameworkCore
@using FoodDeliveryrestart.Domain
@inject IDbContextFactory<FoodDeliveryrestart.Data.FoodDeliveryrestartContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>GroupOrderMember</h2>
    <hr />
    @if (groupordermember is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">JoinTime</dt>
            <dd class="col-sm-10">@groupordermember.JoinTime</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@groupordermember.Status</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">GroupOrderId</dt>
            <dd class="col-sm-10">@groupordermember.GroupOrderId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@groupordermember.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@groupordermember.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@groupordermember.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@groupordermember.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@groupordermember.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="groupordermember" OnValidSubmit="DeleteGroupOrderMember" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(groupordermember is null)">Delete</button> |
            <a href="/groupordermembers">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private GroupOrderMember? groupordermember;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        groupordermember = await context.GroupOrderMember.FirstOrDefaultAsync(m => m.Id == Id);

        if (groupordermember is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteGroupOrderMember()
    {
        using var context = DbFactory.CreateDbContext();
        context.GroupOrderMember.Remove(groupordermember!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/groupordermembers");
    }
}
