@page "/malls"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using FoodDeliveryrestart.Domain
@using FoodDeliveryrestart.Data
@implements IAsyncDisposable
@inject IDbContextFactory<FoodDeliveryrestart.Data.FoodDeliveryrestartContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="malls/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Mall">
    <PropertyColumn Property="mall => mall.MallName" />
    <PropertyColumn Property="mall => mall.Address" />
    <PropertyColumn Property="mall => mall.DateCreated" />
    <PropertyColumn Property="mall => mall.DateUpdated" />
    <PropertyColumn Property="mall => mall.CreatedBy" />
    <PropertyColumn Property="mall => mall.UpdatedBy" />

    <TemplateColumn Context="mall">
        <a href="@($"malls/edit?id={mall.Id}")">Edit</a> |
        <a href="@($"malls/details?id={mall.Id}")">Details</a> |
        <a href="@($"malls/delete?id={mall.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private FoodDeliveryrestartContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
