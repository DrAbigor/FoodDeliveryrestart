@page "/grouporders/delete"
@using Microsoft.EntityFrameworkCore
@using FoodDeliveryrestart.Domain
@inject IDbContextFactory<FoodDeliveryrestart.Data.FoodDeliveryrestartContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>GroupOrder</h2>
    <hr />
    @if (grouporder is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">GroupCode</dt>
            <dd class="col-sm-10">@grouporder.GroupCode</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedTime</dt>
            <dd class="col-sm-10">@grouporder.CreatedTime</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@grouporder.Status</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ClosedTime</dt>
            <dd class="col-sm-10">@grouporder.ClosedTime</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">MallId</dt>
            <dd class="col-sm-10">@grouporder.MallId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@grouporder.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@grouporder.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@grouporder.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@grouporder.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@grouporder.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="grouporder" OnValidSubmit="DeleteGroupOrder" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(grouporder is null)">Delete</button> |
            <a href="/grouporders">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private GroupOrder? grouporder;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        grouporder = await context.GroupOrder.FirstOrDefaultAsync(m => m.Id == Id);

        if (grouporder is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteGroupOrder()
    {
        using var context = DbFactory.CreateDbContext();
        context.GroupOrder.Remove(grouporder!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/grouporders");
    }
}
