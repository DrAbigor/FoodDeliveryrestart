@inherits LayoutComponentBase
@implements IDisposable


@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using FoodDeliveryrestart.Domain

@inject IDbContextFactory<FoodDeliveryrestart.Data.FoodDeliveryrestartContext> DbFactory
@inject AuthenticationStateProvider Auth
@inject NavigationManager Nav
@inject FoodDeliveryrestart.Services.CartService CartSvc

<div class="app-shell">

    @if (!HideTopBar)
    {
        <header class="topbar">
            <div class="topbar-inner">

                <div class="brand" @onclick="GoHome" role="button" tabindex="0">
                    <i class="bi bi-bag"></i>
                    <span>Food Delivery</span>
                </div>

                <nav class="navlinks" aria-label="Main navigation">
                    <NavLink class="navlink" href="/" Match="NavLinkMatch.All">Home</NavLink>
                    <NavLink class="navlink" href="/restaurants">Restaurants</NavLink>
                    <NavLink class="navlink" href="/grouporders/selectmall">Group Orders</NavLink>
                    <NavLink class="navlink" href="/grouporders/my">History</NavLink>
                </nav>

                <div class="actions">
                    <NavLink class="icon-btn" href="/cart" title="Cart">
                        <i class="bi bi-cart3"></i>
                        @if (CartCount > 0)
                        {
                            <span class="badge-count">@CartCount</span>
                        }
                    </NavLink>

                    <NavLink class="icon-btn" href="/profile" title="Profile">
                        <i class="bi bi-person-circle"></i>
                    </NavLink>
                </div>

            </div>
        </header>
    }

    <main class="main">
        @Body
    </main>

</div>

<style>
    .app-shell { min-height: 100vh; background:#f6f6f7; }

    .topbar{
        position: sticky;
        top: 0;
        z-index: 2000;
        background: rgba(255,255,255,0.92);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(0,0,0,0.06);
    }

    .topbar-inner{
        height: 66px;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 18px;
        display:flex;
        align-items:center;
        gap: 16px;
    }

    .brand{
        display:flex;
        align-items:center;
        gap: 10px;
        font-weight: 900;
        cursor: pointer;
        user-select: none;
        white-space: nowrap;
    }

    .navlinks{
        flex: 1;
        display:flex;
        justify-content:center;
        align-items:center;
        gap: 26px;
    }

    .navlink{
        text-decoration:none;
        color:#111;
        font-weight:600;
        padding: 8px 12px;
        border-radius: 999px;
    }

    .navlink.active{
        background: #ffe9dc;
        color: #d85a1a;
    }

    .navlink:hover{
        background:#f3f3f4;
    }

    .actions{
        display:flex;
        align-items:center;
        gap: 10px;
        white-space: nowrap;
    }

    .icon-btn{
        position: relative;
        width: 44px;
        height: 44px;
        border-radius: 12px;
        border: 1px solid #ececec;
        background:#fff;
        display:flex;
        align-items:center;
        justify-content:center;
        cursor:pointer;
        box-shadow: 0 8px 16px rgba(0,0,0,.05);
        text-decoration: none;
        color: inherit;
    }

    .icon-btn:hover{ transform: translateY(-1px); }

    .badge-count{
        position:absolute;
        top: -7px;
        right: -7px;
        min-width: 20px;
        height: 20px;
        padding: 0 6px;
        border-radius: 999px;
        background:#ff5a1f;
        color:#fff;
        font-size: 12px;
        font-weight: 800;
        display:flex;
        align-items:center;
        justify-content:center;
        border: 2px solid #fff;
    }

    @@media (max-width: 720px) {
        .navlinks { gap: 12px; }
        .navlink { padding: 8px 10px; font-size: 0.95rem; }
        .topbar-inner { padding: 0 12px; }
    }
</style>

@code {
    private bool ShowFloatingTrack;
    private int? ActiveOrderId;
    private bool HideTopBar;

    private int CartCount => CartSvc?.Count() ?? 0;

    protected override async Task OnInitializedAsync()
    {
        CartSvc.OnChange += HandleCartChanged;
        Nav.LocationChanged += HandleLocationChanged;

        UpdateHideTopBar();
        await LoadActiveOrder();
    }

    protected override async Task OnParametersSetAsync()
    {
        UpdateHideTopBar();
        await LoadActiveOrder();
    }

    private void HandleCartChanged() => _ = InvokeAsync(StateHasChanged);

    private async void HandleLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        UpdateHideTopBar();
        await LoadActiveOrder();
        await InvokeAsync(StateHasChanged);
    }

    private void UpdateHideTopBar()
    {
        var path = new Uri(Nav.Uri).AbsolutePath.ToLowerInvariant();
        HideTopBar =
            path.StartsWith("/login") ||
            path.StartsWith("/register") ||
            path.StartsWith("/access-denied");
    }

    private async Task LoadActiveOrder()
    {
        ShowFloatingTrack = false;
        ActiveOrderId = null;

        if (HideTopBar) return;

        var state = await Auth.GetAuthenticationStateAsync();
        var user = state.User;

        if (user?.Identity?.IsAuthenticated != true)
            return;

        var email = user.FindFirst(ClaimTypes.Email)?.Value ?? user.Identity?.Name;
        if (string.IsNullOrWhiteSpace(email))
            return;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();

            var domainUser = await db.User.FirstOrDefaultAsync(u => u.Email == email);
            if (domainUser == null) return;

            var active = await db.Order
                .Where(o => o.UserId == domainUser.Id)
                .Where(o => (((byte?)(o.DeliveryStage) ?? (byte)0) < (byte)3))
                .OrderByDescending(o => o.Id)
                .Select(o => new { o.Id })
                .FirstOrDefaultAsync();

            if (active != null)
            {
                ActiveOrderId = active.Id;
                ShowFloatingTrack = true;
            }
        }
        catch
        {
            ShowFloatingTrack = false;
            ActiveOrderId = null;
        }
    }

    private void GoHome() => Nav.NavigateTo("/");
    private void GoCart() => Nav.NavigateTo("/cart");
    private void GoProfile() => Nav.NavigateTo("/profile");

    private void GoTrack()
    {
        if (ActiveOrderId.HasValue)
            Nav.NavigateTo($"/orders/{ActiveOrderId.Value}/track");
    }

    public void Dispose()
    {
        CartSvc.OnChange -= HandleCartChanged;
        Nav.LocationChanged -= HandleLocationChanged;
    }
}
