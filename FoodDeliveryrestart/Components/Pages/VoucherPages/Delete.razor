@page "/voucherpages/delete"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using FoodDeliveryrestart.Domain
@using Microsoft.AspNetCore.Authorization
@inject IDbContextFactory<FoodDeliveryrestart.Data.FoodDeliveryrestartContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Delete Voucher</PageTitle>

<h1>Delete</h1>

<h2>Voucher</h2>
<hr />
<h3>Are you sure you want to delete this?</h3>
@if (voucher is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@voucher.Code</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@voucher.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@voucher.Description</dd>

        <dt class="col-sm-2">Discount Type</dt>
        <dd class="col-sm-10">@voucher.DiscountType</dd>

        <dt class="col-sm-2">Discount Value</dt>
        <dd class="col-sm-10">@voucher.DiscountValue</dd>

        <dt class="col-sm-2">Is Active</dt>
        <dd class="col-sm-10">@voucher.IsActive</dd>
    </dl>

    <EditForm Model="voucher" OnValidSubmit="DeleteVoucher">
        <button type="submit" class="btn btn-danger" disabled="@(voucher is null)">Delete</button> |
        <a href="/voucherpages">Back to List</a>
    </EditForm>
}

@code {
    private Voucher? voucher;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        voucher = await context.Voucher.FirstOrDefaultAsync(m => m.Id == Id);

        if (voucher is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteVoucher()
    {
        using var context = DbFactory.CreateDbContext();
        var voucherToDelete = await context.Voucher.FindAsync(Id);
        if (voucherToDelete != null)
        {
            context.Voucher.Remove(voucherToDelete);
            await context.SaveChangesAsync();
        }
        NavigationManager.NavigateTo("/voucherpages");
    }
}
